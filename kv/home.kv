<home>:
    MDFloatLayout:
        md_bg_color:[1,1,1,1]
    
    
    MDBottomNavigation:
        #panel_color: "#eeeaea"
        selected_color_background: "orange"
        text_color_active: "lightgrey"

        MDBottomNavigationItem:
            #icon home
            icon: "home"
            text: "Home"
            Image:
                source: 'images/GambarPeta.png'
                size_hint: None, None
                size: 320, 320
                pos_hint: {'center_x': .5, 'center_y': .7}
            
            #buat card
            MDCard:
                orientation: "vertical"
                size_hint: None, None
                size: 50, 50
                pos_hint: {'center_x': .1, 'center_y': .36}
                padding: "8dp"
                spacing: "8dp"
                elevation: 2
                radius: [3,]
                md_bg_color: 1, 1, 1, 1
                #tampilkan icon di card dan keterangan di bawah
                MDIconButton:
                    #icon bencana alam
                    icon: "weather-lightning"
                    pos_hint: {'center_x': .5, 'center_y': .8}
                    user_font_size: "50sp"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    on_press: 
                        root.manager.current = 'infoBencana'
                        root.manager.transition.direction = 'left'
                    
                MDLabel:
                    text: "Info Bencana"
                    pos_hint: {'center_x': .5, 'center_y': .7}
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
