<index>:
    MDFloatLayout:
        md_bg_color: [1, 1, 1, 1]
    

    Image:
        source: 'images/gambar1.png'
        size_hint: None, None
        size: 300, 900
        pos_hint: {'center_x': .5, 'center_y': .5}
    # MDLabel:
    #     text: "text"
    #     color: [0, 0, 0, 1]
    #     halign: 'center'
    #     pos_hint: {'center_x': .5, 'center_y': .2}
    #     font_style: 'H5'
    # button icon ke kanan dengan background color transparan
    MDFloatingActionButton:
        icon: "arrow-right"
        pos_hint: {'center_x': .5, 'center_y': .1}
        #bcground color primary
        md_bg_color: app.theme_cls.primary_color
        #pindah ke scrin selamat
        on_release: 
            root.manager.current = 'selamat'
            root.manager.transition.direction = 'left'
        